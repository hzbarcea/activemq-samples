<assembly>
    <!-- id typically identifies the "type" (src vs bin etc) of the assembly -->
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/release</directory>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}</outputDirectory>
            <includes>
                <include>licenses/*.*</include>
                <include>lib/*</include>
                <include>RELEASE</include>
                <include>README</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/maven-shared-archive-resources/META-INF</directory>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>DEPENDENCIES</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/release/bin</directory>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}/bin</outputDirectory>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/release/etc</directory>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}/etc</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/release/docs</directory>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}/docs</outputDirectory>
            <includes>
                <include>**/*.pdf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/libs/endorsed</directory>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}/lib/endorsed</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>orbweaver-mesh-${orbweaver.version}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
